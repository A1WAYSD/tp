<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="Flashlingo" minWidth="450" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/flash_lingo.png" />
  </icons>
  <scene>
    <Scene fx:id="scene">
      <stylesheets>
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File" styleClass="menu">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" styleClass="menu-item"/>
          </Menu>
          <Menu mnemonicParsing="false" text="Help" styleClass="menu">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" styleClass="menu-item"/>
          </Menu>
        </MenuBar>

        <HBox HBox.hgrow="ALWAYS">
          <StackPane VBox.vgrow="NEVER">
            <padding>
              <Insets top="5" left="15" />
            </padding>
            <ImageView fitWidth="30" fitHeight="30">
              <image>
                <Image url="@/images/flash_lingo.png" />
              </image>
            </ImageView>
          </StackPane>
          <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
            <padding>
              <Insets top="15" right="10" />
            </padding>
          </StackPane>
        </HBox>

        <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                   minHeight="100" prefHeight="100" maxHeight="100">
          <padding>
            <Insets right="10" bottom="5" left="10" />
          </padding>
        </StackPane>

        <VBox fx:id="flashCardList" styleClass="pane-with-border" minWidth="340" prefWidth="340" VBox.vgrow="ALWAYS">
          <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
          </padding>
          <StackPane fx:id="flashCardListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
        </VBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
